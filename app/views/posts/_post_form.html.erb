<% if @post.errors.any? %>
  <div class="row">
    <div class="col-xs-5 alert alert-danger">
      Please fix the following errors:
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= form_for @post do |f| %>
<div class="input-group">
  <%= f.label :title %> <br>
  <%= f.text_field :title, class: "form-control" %> <br>
</div>
<div class="input-group">
  <%= f.label :url %> <br>
  <%= f.text_field :url, class: "form-control" %> <br>
</div>
<div class="input-group">  
  <%= f.label :description %> <br>
  <%= f.text_area :description, size: "55x5", class: "form-control" %> <br>
</div>
<br>
<div class="input-group">
  <%= f.submit "Submit Post", class: "btn btn-primary" %>
</div>
<% end %>