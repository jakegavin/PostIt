<%= render 'shared/errors', obj: @post %>
<%= form_for @post do |f| %>
  <div class="input-group">
    <%= f.label :title %> <br>
    <%= f.text_field :title, size: "40", class: "form-control" %> <br>
  </div>
  <div class="input-group">
    <%= f.label :url %> <br>
    <%= f.text_field :url, size: "40", class: "form-control" %> <br>
  </div>
  <div class="input-group">  
    <%= f.label :description %> <br>
    <%= f.text_area :description, size: "55x5", class: "form-control" %> <br>
  </div>
  <br>
  <div class="input-group">
    <%= f.label 'Categories' %>:&nbsp;
    <%#= collection_check_boxes :post, :category_ids, Category.all, :id, :name %>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <% cb.label(class: "checkbox-inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
  </div>
  <br>
  <div class="input-group">
    <%= f.submit (@post.new_record? ? 'Create Post' : 'Update Post'), class: "btn btn-primary" %>
  </div>
<% end %>