<%= render partial: 'shared/errors', object: @post %>
<%= form_for @post do |f| %>
<div class="input-group">
  <%= f.label :title %> <br>
  <%= f.text_field :title, class: "form-control" %> <br>
</div>
<div class="input-group">
  <%= f.label :url %> <br>
  <%= f.text_field :url, class: "form-control" %> <br>
</div>
<div class="input-group">  
  <%= f.label :description %> <br>
  <%= f.text_area :description, size: "55x5", class: "form-control" %> <br>
</div>
<br>
<div class="input-group">
  <%= f.submit "Submit Post", class: "btn btn-primary" %>
</div>
<% end %>