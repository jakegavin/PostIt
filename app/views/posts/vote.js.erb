<% if @vote.valid? %>
  <% if params[:vote] == "true" %>
    $('#<%= @post.slug %>_arrow_up').css('color', '#2EB82E');
  <% else %>
    $('#<%= @post.slug %>_arrow_down').css('color', '#CC0000');
  <% end %>
  $('#<%= @post.slug %>_votes').html('<%= @post.total_votes %> Votes');
<% else %>
  $('#<%= @post.slug %>_vote_error').remove();
  $('#<%= @post.slug %>_votes').parent('div').css('background-color', '#ECD6D6');
  $('#<%= @post.slug %>_votes').parent('div').append('<p class="small text-center" style="color: #d9534f;" id="<%= @post.slug %>_vote_error">You can only vote once.</p>');
<% end %>