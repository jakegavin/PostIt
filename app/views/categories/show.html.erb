<%= render 'shared/content_title', title: "#{@category.name} Posts" %>
<h5><%= link_to "Edit Category", edit_category_path(@category) %></h5>

<% @posts.each do |post| %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 well">
    <h4><%= link_to post.title, post.url %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">Posted by <%= post.creator.username %> at </span>
      <small><%= post.created_at %></small>
    </p>
    <p>
      <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </span>
      </small>
    </p>
  </div>
</div>
<% end %>